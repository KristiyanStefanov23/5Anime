@model FiveAnime.Models.EpisodeModel

@{
    ViewData["Title"] = "Create Episode";
}

<h1>CreateEpisode</h1>

<h4>Episode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEpisode" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnimeId" class="control-label"></label>
                <select asp-for="AnimeId" class="form-control">
                    @foreach (var anime in ViewBag.AnimeList)
                    {
                        <option value="@anime.Key">@anime.Value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeVideo" class="control-label"></label>
                <input asp-for="EpisodeVideo" accept="video/mp4,video/x-m4v,video/*" type="file" />
                <span asp-validation-for="EpisodeVideo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

